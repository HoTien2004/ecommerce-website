{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./build",
        "module": "nodenext",
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}